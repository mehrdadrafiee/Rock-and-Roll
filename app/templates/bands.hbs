<div class="col-sm-4 col-md-4">
<small>app/templates/bands.hbs</small>
  <div class="list-group">
    <div class="list-group-item">
      {{input type="text" class="new-band" placeholder="New Band" value=name}}
      <button class="btn btn-primary btn-sm new-band-button" {{action "createBand"}}>Add</button>
    </div>
    {{#each model.sortedContent as |band|}}
      {{#link-to "bands.band.songs" band class="list-group-item
  band-link"}}
        {{band.name}}
        <span class="pointer glyphicon glyphicon-chevron-right"></span>
      {{/link-to}}
    {{/each}}
  </div>
</div>
<div class="col-sm-8 col-md-8">
  <div class="list-group">
    {{outlet}}
  </div>
</div>